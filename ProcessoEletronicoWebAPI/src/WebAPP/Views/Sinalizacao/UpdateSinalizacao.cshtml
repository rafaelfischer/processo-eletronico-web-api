@model SinalizacaoViewModel

@{
    ViewBag.Title = "Criar Sinalização";
}

<div class="panel panel-success">
    <div class="panel-body">
        <form method="post">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <label asp-for="Descricao">Descrição:</label>
                    <input class="form-control" type="text" asp-for="Descricao" />
                    <span asp-validation-for="Descricao"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" asp-controller="Sinalizacao" asp-action="Update">Salvar</button>
                </div>

            </div>
        </form>
    </div>
</div>