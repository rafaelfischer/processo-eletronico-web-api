@{
    ViewBag.Title = "Página Inicial";
    Layout = "_LayoutPublico";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <h3>Usuário Autenticado</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Claim
                    </th>
                    <th>
                        Value
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in User.Claims)
            {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>