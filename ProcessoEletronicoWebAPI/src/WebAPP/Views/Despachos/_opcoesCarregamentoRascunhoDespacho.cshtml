@model CarregamentoRascunhoDespachoViewModel

<div class="form-group">
    <form asp-controller="RascunhoDespacho" asp-action="Add" asp-route-ajax="true"
          data-ajax-mode="replace"
          data-ajax-update="#opcoes-carregamento"          
          data-ajax="true"          
          data-ajax-method="GET"
          >
        <input type="checkbox" class="hide" checked="checked" name="ajax" />
        <input type="hidden" value="@Model.IdAtividade" name="idAtividade" />
        <input type="hidden" value="@Model.IdProcesso" name="idProcesso" />
        <button class="btn btn-warning btn-block"><i class="fa fa-edit" aria-hidden="true"></i> Preencher Despacho</button>
    </form>
</div>
<div class="form-group">
    <form asp-controller="RascunhoDespacho" asp-action="SearchToImport"
          data-ajax-mode="replace"
          data-ajax-update="#opcoes-carregamento"
          data-ajax="true"
          data-ajax-method="GET">
        <input type="hidden" value="@Model.IdAtividade" name="idAtividade" />
        <input type="hidden" value="@Model.IdProcesso" name="idProcesso" />
        <button class="btn btn-info btn-block"><i class="fa fa-link" aria-hidden="true"></i> Importar Rascunho de Despacho</button>
    </form>
</div>