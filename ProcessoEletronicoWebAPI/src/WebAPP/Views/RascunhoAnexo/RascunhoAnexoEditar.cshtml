@model EditarAnexoRascunho

<form
      asp-action="EditarAnexo"
      asp-controller="RascunhoAnexo"
      data-ajax-mode="replace"
      data-ajax-update="#listaanexos"            
      data-ajax="true"
      data-ajax-method="POST"
      >
    <input type="hidden" asp-for="Anexo.Id" />
    <input type="hidden" asp-for="IdRascunho" />
    <div class="input-group">        
        <select class="form-control" asp-for="Anexo.TipoDocumental.Id" asp-items="@(new SelectList(Model.TiposDocumentais,"Id","Text"))">
            <option value="0">Selecione um tipo documental</option>
        </select>
        <span class="input-group-btn">
            <button class="btnSalvarAnexo btn btn-info" type="button"><i class="fa fa-save" aria-hidden="true"></i></button>
            <button class="btnCancelarEdicaoAnexo btn btn-danger" type="button"><i class="fa fa-close" aria-hidden="true"></i></button>
        </span>
    </div>    
</form>
