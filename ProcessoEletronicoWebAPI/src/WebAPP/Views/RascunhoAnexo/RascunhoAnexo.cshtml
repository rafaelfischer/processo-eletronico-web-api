@model RascunhoProcessoViewModel
<div id="listaanexos" class="table-responsive">
    @Html.Partial("~/Views/RascunhoAnexo/RascunhoAnexoLista.cshtml", new ListaAnexosRascunho { IdRascunho = Model.Id, Anexos = Model.Anexos })
</div>

<hr />

<div class="box-header with-border">
    <h3 class="box-title">Incluir Anexo</h3>    
</div>
<div class="box-body">
    <form name="formanexo"
          enctype="multipart/form-data"
          id="formanexo">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GuidOrganizacao" />
            <label>Tipo Documental</label>
            <select id="idTipoDocumental" placeholder="Selecione um tipo documental" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Descrição</label>
            <textarea id="DescricaoAnexos" class="form-control" rows="2"></textarea>
        </div>

        <div class="form-group">
            <button id="textLoad" type="button" onclick="$('#files').trigger('click')" class="btn btn-block btn-info">Selecionar Arquivos</button>
            <input type="file" multiple asp-for="files" class="hide">
        </div>

        <div id="progressAnexo" class="progress progress-sm active hide">
            <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                <span class="sr-only">20% Complete</span>
            </div>
        </div>

        <div id="arquivosselecionados">

        </div>

        <div class="box-footer">
            <div class="pull-right">
                <button type="button" class="btn btn-default" onclick="LimparAnexos()"><i class="fa fa-close"></i> Limpar</button>
                <button type="button" id="btnSalvarAnexo" class="btn btn-primary"><i class="fa fa-check"></i> Adicionar</button>
            </div>
        </div>
    </form>
</div>