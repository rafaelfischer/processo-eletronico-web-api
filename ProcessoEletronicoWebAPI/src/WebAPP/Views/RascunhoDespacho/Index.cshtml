@model ICollection<RascunhoDespachoViewModel>

@{
    ViewBag.Title = "Rascunhos";
    ViewBag.SubTitle = "Rascunhos de Despacho";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@ViewBag.SubTitle</h3>
        <div class="box-tools pull-right">
            <a asp-action="Add" asp-controller="RascunhoDespacho" class="btn btn-primary btn-sm">
                <i class="fa fa-plus"></i> Novo Despacho
            </a>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @if (Model?.Count > 0)
        {
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th class="col-md-3">TEXTO</th>
                        <th class="col-md-3">ORGANIZAÇÃO</th>
                        <th class="col-md-3">UNIDADE</th>
                        <th class="text-center col-md-2">AÇÕES</th>
                    </tr>
                </thead>
                <tbody id="listaRascunhosDespacho">
                    @if (Model != null)
                    {
                        @Html.Partial("ListaRascunhoDespacho", Model)
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">Você não possui rascunho de despacho.</div>
        }
    </div>
    <!-- /.box-body -->
</div>

@section scripts{
    <script src="~/js/RascunhoDespacho.js"></script>    
}