@model RascunhoProcessoViewModel
<form name="formanexo" enctype="multipart/form-data" id="formanexo">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="GuidOrganizacao" />
        <label>Tipo Documental</label>
        <select id="idTipoDocumental" placeholder="Selecione um tipo documental" class="form-control"></select>
    </div>

    <div class="form-group">        
        <button id="textLoad" type="button" onclick="$('#files').trigger('click')" class="btn btn-block btn-info">Carregar Arquivos</button>
        <input type="file" multiple asp-for="files" class="hide" onchange="uploadFiles('files');">        
    </div>

    <div id="progressAnexo" class="progress progress-sm active hide">
        <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
            <span class="sr-only">20% Complete</span>
        </div>
    </div>

    <div class="form-group">        
        <div id="grupoanexos" class="table-responsive">
            @Html.Partial("RascunhoAnexoLista", Model.Anexos)
        </div>
    </div>
    <div class="box-footer">
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-default" onclick="LimparAnexos()"><i class="fa fa-trash"></i> Limpar</button>
            <button type="button" id="btnSalvarAnexo" class="btn btn-primary"><i class="fa fa-check"></i> Adicionar</button>
        </div>
    </div>
</form>