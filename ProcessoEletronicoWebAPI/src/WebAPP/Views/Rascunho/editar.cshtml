@model RascunhoProcessoViewModel
@{
    ViewBag.Title = "Rascunhos";
    ViewBag.SubTitle = "Autuação de Processo - Rascunho";
    var cont = 0;
}



<div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="false"><h3 class="box-title">Dados Básicos</h3></a></li>
        <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false"><h3 class="box-title">Interessados</h3></a></li>
        <li class=""><a href="#tab_3" data-toggle="tab" aria-expanded="true"><h3 class="box-title">Abrangência</h3></a></li>
        <li class=""><a href="#tab_4" data-toggle="tab" aria-expanded="true"><h3 class="box-title">Anexos</h3></a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">
            <form method="post">
                <div class="form-group">
                    <strong>Id</strong><br /> @Model.Id
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="GuidOrganizacao" />
                </div>

                <div class="form-group">
                    <label asp-for="Atividade"></label>
                    <select class="form-control" asp-for="Atividade.Id" asp-items="@(new SelectList(Model.AtividadesLista,"Id","CodigoDescricao"))">
                        <option value="-1">Selecione uma Atividade</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="NomeUsuarioAutuador"></label>
                    <input disabled asp-for="NomeUsuarioAutuador" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="UnidadesLista"></label>
                    <select class="form-control" asp-for="GuidUnidade" asp-items="@(new SelectList(Model.UnidadesLista,"Guid","Nome"))">
                        <option value="">Selecione uma Unidade</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Resumo"></label>
                    <textarea class="form-control" asp-for="Resumo" rows="5" cols="80"></textarea>
                </div>

                <div class="form-group" id="gruposinalizacao">
                    <label asp-for="Sinalizacoes"></label>
                    @foreach (var item in Model.SinalizacoesLista)
                    {
                        <div class="checkbox">
                            <label><input type="checkbox" name="Sinalizacoes[@(cont++)].Id" value="@item.Id" /> @item.Descricao</label>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <button asp-action="editar" asp-controller="rascunho">Salvar</button>
                </div>
            </form>
        </div>
        <!-- /.tab-pane -->
        <div class="tab-pane" id="tab_2">
        </div>
        <!-- /.tab-pane -->
        <div class="tab-pane" id="tab_3">
            <form method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <label asp-for="UfLista"></label>
                    <select class="form-control" id="ufajax" asp-items="@(new SelectList(Model.UfLista,"Sigla","Nome"))">
                        <option value="0">Selecione um Estado</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="MunicipiosLista"></label>
                    <select class="form-control" id="municipiosajax" data-placehoder="Selecione um município"></select>
                </div>
                <div class="form-group">
                    <label asp-for="MunicipiosRascunhoProcesso"></label>
                    <select multiple="multiple" class="form-control" asp-for="MunicipiosRascunhoProcesso" id="municipiosselecionados"></select>
                    <hr />
                    <button type="button" class="btn btn-sm btn-default" id="btnLimparAbrangencia">Limpar</button>
                </div>
                <div class="form-group" id="grupomunicipios">
                </div>
                <div class="form-group">
                    <button asp-action="editar" asp-controller="rascunho">Salvar</button>
                </div>
            </form>
        </div>
        <!-- /.tab-pane -->
        <div class="tab-pane" id="tab_4">
        </div>
        <!-- /.tab-pane -->
    </div>
    <!-- /.tab-content -->
</div>

<div class="modal fade" id="modalDescartarRascunho" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-footer">
                <button type="button" class="btn btn-default">Descartar Rascunho</button>
                <button type="button" class="btn btn-primary">Salvar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


@section scripts{
    <script src="~/js/rascunhoCreate.js"></script>
}